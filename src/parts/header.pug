header.adaptive-gap
    a.logo(href='/') HOLST-NA-ZAKAZ
    nav
        ul.flex
            each item in navItems
                li
                    a(href=item.link)= item.text
    .contacts.flex 
        a.phone(href=`tel:${phoneNumberMsc}`)= phoneNumberMsc
        .buttons.flex
            a(href=messengers.whatsapp.link title='WhatsApp') 
                + svgUse('whatsapp')
            a(href=`mailto:${email}` title='Email') 
                + svgUse('mail')

header.mobile
    button.menu.p-3
        + svgUse('menu', 30, 26)
    a.logo(href='/') HOLST-NA-ZAKAZ
    .nav-wrapper.pl-16.hidden
        .flex.justify-end.p-2
            button.close.p-4
                + svgUse('cross', 'scale-150')
        nav.mb-16
            ul.flex-col
                each item in navItems
                    li
                        a(href=item.link).font-normal= item.text
        .contacts.flex
            .buttons.flex.gap-8
                a.scale-150(href=messengers.whatsapp.link title='WhatsApp')
                    + svgUse('whatsapp')
                a.scale-150(href=`mailto:${email}` title='Email')
                    + svgUse('mail')
                a.phone.scale-150(href=`tel:${phoneNumberMsc}`)
                    + svgUse('phone')