mixin item(images, size, old_price, new_price)
    .item_wrapper
        img(data-src=images[0]).lazy
        .content
            .params
                .param
                    span Размер
                    span= size
                .param
                    span Старая цена
                    span.line-through= old_price
                .param
                    span Новая цена
                    span= new_price
            +textBtn('Заказать')



+section('sec7-examples_and_prices', '07', 'Цены и примеры') 
    +radial(1)
    .slider
        .slider__wrapper
            .slider__items
                each item in examplesAndPrices
                    .slider__item
                        +item(item.images, item.size, item.old_price, item.new_price)

        a.slider__control(data-slide='prev')
        a.slider__control(data-slide='next')
        ol.slider__indicators