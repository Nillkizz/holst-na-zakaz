mixin wrapLink(link, prefix='', onlyBlock=false)
    a(href= prefix+link)&attributes(attributes)
        block
        unless onlyBlock
            |#[!= text || link]

mixin icon( name )
    - var is_sprite = name.startsWith('sprite-')
    - var url = '/assets/img/icons/' + (is_sprite ? `sprite.svg#${name.replace('sprite-', '')}` : `${name}.svg`)
    if (is_sprite)
        svg.icon&attributes(attributes).fill-current
                use(xlink:href=url)
    else 
        img(src=url).icon&attributes(attributes)
        

mixin textBtn(text)
    button.text-button&attributes(attributes)
        span!= text
        block

mixin section(id, number, h2)
    section(id=id)&attributes(attributes)
        .title
            h2!= h2
            .section_number=number
        .wrapper
            block

mixin angle_arrow(size='30px', thickness)
    - 
        var borders = {
            t: thickness ? `border-t-${thickness}` : 'border-t',
            r: thickness ? `border-r-${thickness}` : 'border-r',
        }
    div.angle-arrow(class=`${borders.t} ${borders.r}` style={'--size': size, height: 'var(--size)', width:  'var(--size)'})&attributes(attributes)


mixin radial(num)
    -var i = 0
    while i++ < num
        .radial
