include ../_data.pug
include ../mixins.pug

block variables
    - var TITLE = null
    - var BODY_CLASSES = null
doctype html
html(lang="ru")
    head
        block head
            meta(charset="UTF-8")
            meta(http-equiv="X-UA-Compatible" content="IE=edge")
            meta(name="viewport" content="width=device-width, initial-scale=1.0")
            link(rel='preconnect' href='https://fonts.googleapis.com')
            link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
            link(href='https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;500;600;700;800;900&display=swap' rel='stylesheet')
            link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap' rel='stylesheet')

            title= TITLE
            link(rel="stylesheet" href="/css/main.css")
    body(class=BODY_CLASSES).overflow-x-hidden
        include ../header.pug
        main.flex-grow.mb-20
            block content
        include ../footer.pug
        script(src="/js/main.js") 